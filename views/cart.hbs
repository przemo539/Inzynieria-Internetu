{{# if this.products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{#each products}}
                    <li class="list-group-item">
                        <span style="font-weight: bold">{{this.item.brand}} {{this.item.model}} </span>
                        <span >{{this.price}}z≈Ç /dzien</span>
                        <span></span><a href="/remove/{{this.item._id}}">Usun z listy</a></li></span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <strong>Ogolem: {{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
     <h3>W dniach:</h3>
                <input id="od" value="2016-03-02">
                <input id="do" value="2018-03-02">
                <a id ="target" href='#' class="btn btn-success">Do kasy</a>
                <script type="text/javascript">
                $( "#target" ).click(function() {
                    var odDaty = $( "#od" ).val();
                    var doDaty = $( "#do" ).val();
                    window.location.href='/checkout/'+odDaty+'/'+doDaty;
                });
                </script>
        
            
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>Nie dodano samochodow do listy zamowien!</h2>
        </div>
    </div>
{{/if}}
